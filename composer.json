{
    "name": "albertoroldanq/weight-conversions",
    "description": "PHP package to perform weight conversions",
    "keywords": [
        "albertoroldanq",
        "weight-conversions"
    ],
    "homepage": "https://github.com/albertoroldanq/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Alberto Roldan",
            "email": "albertoroldanq@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.3.2",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Albertoroldanq\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Albertoroldanq\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
